@page
@model IdeaTrading.Pages.Views.ViewsModel
@{
}


<br>
<h2>
    List of Employees
</h2>

<a class='btn btn-primary btn-sm' href='/Views/Create'>New Employee</a>

<table class="table">

    <thead>

        <tr>
            <th>
                ID
            </th>

            <th>
                First Name
            </th>

            <th>
                Last Name
            </th>

            <th>
                Address
            </th>

            <th>
                City
            </th>

            <th>
                Date Of Employment
            </th>

            <th>
                Position
            </th>

            <th>
                Phone
            </th>
        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model.listEmployees)
        {

            <tr>

                <td>
                    @item.id
                </td>
                <td>
                    @item.firstName
                </td>
                <td>
                    @item.lastName
                </td>
                <td>
                    @item.address
                </td>
                <td>
                    @item.city
                </td>
                <td>
                    @item.dateOfEmployment
                </td>
                <td>
                    @item.position
                </td>
                <td>
                    @item.phone
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Views/Edit?id=@item.id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Views/Delete?id=@item.id">Delete</a>
                </td>

            </tr>

        }
    </tbody>

</table>